@model IEnumerable<foodtrackingcodefirst.Models.Clinic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Clinic List</h1>
<br />
<br />
@using (Html.BeginForm("Index", "Clinic"))
{
    @Html.TextBox("x","",new{style="width:400px; margin-left:500px;", placeholder="Please Enter Clinic Name..."})
    <input type="Submit" value="Search" style="color:blue; margin-top:5px; margin-left:500px; width:400px;" />
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClinicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorSpecialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClinicNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorSpecialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClinicID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ClinicID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
